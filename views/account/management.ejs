<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
    <h3>Inventory Management</h3>
    <p>
        <a href="/inv">Inventory Management</a>
    </p>
<% } %>
