<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>
<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p>You're logged in</p>

<a href="account/update/<%=locals.accountData.account_id%>">Edit Account Information</a>

<% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
    <h3>Inventory Management</h3>
    <p>
        <a href="/inv">Edit Inventory</a>
    </p>
<% } %>