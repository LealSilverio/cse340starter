<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<!-- Display form -->
<form action="/inv/delete" method="post">
    <div class="data-box">
        <label for="inv_make">Make</label>
        <input readonly type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>">

        <label for="inv_model">Model</label>
        <input readonly type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>">

        <label for="inv_year">Year</label>
        <input readonly type="text" name="inv_year" required  value="<%= locals.inv_year %>">    

        <label for="inv_price">Price</label>
        <input readonly type="text" name="inv_price" id="inv_price" required  value="<%= locals.inv_price %>">

    </div>
    <button type="submit">Delete Vehicle</button>
    
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>